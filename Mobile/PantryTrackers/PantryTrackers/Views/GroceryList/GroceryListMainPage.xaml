<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    x:Class="PantryTrackers.Views.GroceryList.GroceryListMainPage"
    x:Name="contentPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Grocery List">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddGroceryItemCommand}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Padding="10, 5, 10, 0">
            <Label BackgroundColor="Yellow"
                   HorizontalOptions="CenterAndExpand"
                   Text="Hint: Long press to select an item." />

            <ListView ItemsSource="{Binding ListItems}"
                      SelectionMode="None"
                      HasUnevenRows="True"
                      IsGroupingEnabled="True"
                      IsPullToRefreshEnabled="True"
                      IsRefreshing="{Binding IsNetworkBusy, Mode=OneWay}"
                      RefreshCommand="{Binding RefreshDataCommand}">

                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Title}" 
                                   FontSize="Large"
                                   FontAttributes="Bold"
                                   TextColor="Green" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="MenuItem_Clicked"
                                          Text="{Binding SizeText, StringFormat='Purchased {0}'}" />

                                <MenuItem Command="{Binding Source={x:Reference contentPage}, Path=BindingContext.RemoveItemCommand}"
                                          CommandParameter="{Binding .}"
                                          Text="Remove"
                                          IsDestructive="True"/>

                            </ViewCell.ContextActions>
                            <StackLayout>
                                <StackLayout Orientation="Horizontal"
                                             BackgroundColor="{Binding Status, Converter={d:StaticResource ItemStatusToColorConverter}}">

                                   <Label Text="{Binding SizeText}"
                                          TextDecorations="{Binding Status, Converter={d:StaticResource ItemStatusToDecorationConverter}}"
                                          HorizontalOptions="Start"
                                          FontSize="Medium"
                                          FontAttributes="Bold"
                                          VerticalOptions="CenterAndExpand"
                                          Margin="0, 10"></Label>

                                   <Label Text="{Binding QuantityString}"
                                          IsVisible="{Binding HasQuantity}"
                                          TextDecorations="{Binding Status, Converter={d:StaticResource ItemStatusToDecorationConverter}}"
                                          FontSize="Medium"
                                          HorizontalOptions="EndAndExpand"
                                          FontAttributes="Bold"
                                          VerticalOptions="CenterAndExpand"
                                          Margin="0, 10"></Label>
                                    
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <Label Text="" />
                </ListView.Footer>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
