{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "SingleSignOn": {
    "CorsOrigins": [
      "http://localhost:4200/",
      "https://pantrytrackers-dev.azurewebsites.net/"
    ],
    "Clients": [
      {
        "ClientId": "pantrytrackers-ui",
        "ClientName": "PantryTracker Web App",
        "AllowedGrantTypes": [ "implicit" ],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600,
        "RequireConsent": false,
        "RedirectUris": [
          "http://localhost:4200/signin-callback",
          "http://localhost:4200/assets/silent-callback.html",
          "https://pantrytrackers-dev.azurewebsites.net/sign-in-callback",
          "https://pantrytrackers-dev.azurewebsites.net/assets/silent-callback.html"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:4200/signout-callback",
          "https://pantrytrackers-dev.azurewebsites.net/signout-callback"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "pantrytrackers-ui"
        ]
      }
    ]
  }
}
